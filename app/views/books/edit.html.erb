<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <h2 class="bodytop_margin">編集フォーム</h2>
                <%= form_for(@book) do |f| %>
                <div class="col bodytop_margin text-white bg-dark">タイトル</div>
                <div class="w-100"></div>
                <div class="col border box_background_color">
                    <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="w-100"></div>
                <div class="col bodytop_margin text-white bg-dark">感想</div>
                <div class="w-100"></div>
                <div class="col border box_background_color">
                    <%= f.text_area :body, class: "form-control",size: "0x13" %>
                </div>
                <%= f.submit '更新', class: "btn btn-light btn-sm btn-block texttop_margin border" %>
                <div class="w-100"></div>
                <%= link_to "詳細", book_path(@book.id), class: "btn btn-light texttop_margin border" %>
                <%= link_to "戻る", books_path, class: "btn btn-light texttop_margin border" %>
                <% end %>
            </div>
        </div>
    </div>
</div>