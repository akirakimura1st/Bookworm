<div class="bodytop_margin">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2">
                <h2>投稿フォーム</h2>
                <%= form_for(@book) do |f| %>
                <%= f.label "タイトル" %>
                <br>
                <%= f.text_field :title %>
                <br>
                <%= f.label "感想" %>
                <br>
                <%= f.text_area :body %>
                <br>
                <%= f.submit "投稿", class: "btn btn-primary" %>
                <% end %>
            </div>
            <div class="col-lg-10">
                <table class="table table-striped table_font_size">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width:100px;">タイトル</th>
                            <th>感想</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        <% @booksp.each do |book| %>
                        <tr  class="border">
                            <td  class="border">
                                <%= book.title %>
                            </td>
                            <td>
                                <%= book.body %>
                            </td>
                            <td  class="border" style="width:50px;"><%= link_to "詳細", book_path(book.id), class: "btn btn-light btn-sm" %></td>
                            <td  class="border" style="width:50px;"><%= link_to "編集", edit_book_path(book.id), class: "btn btn-light btn-sm" %></td>
                            <td  class="border" style="width:50px;"><%= link_to "削除", book_path(book.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-light btn-sm" %></td>
                        </tr>
                    </thead>
                    <% end %>
                    <%= paginate @booksp, class: "paginate", class: "btn btn-primary" %>
                </table>
            </div>
        </div>
    </div>
</div>